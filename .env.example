# =============================================================================
# AMA-Intent v2.0 + SDDCS Production Environment
# =============================================================================

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-random-secret-key

# JWT Authentication
JWT_SECRET_KEY=change-this-to-random-jwt-secret

# SDDCS Configuration
SDDCS_NETWORK_SALT=change-this-to-unique-salt
SDDCS_AGENT_ID=1
SDDCS_ENABLE_CHECKPOINTS=true
SDDCS_ENABLE_CACHE_VALIDATION=true
SDDCS_ENABLE_ROLLING_JWT=true
SDDCS_CHECKPOINT_INTERVAL=50
SDDCS_CACHE_TTL=3600

# LLM APIs
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-grafana-password

# Backup (S3)
BACKUP_S3_BUCKET=ama-intent-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Domain
DOMAIN=ama.yourdomain.com
