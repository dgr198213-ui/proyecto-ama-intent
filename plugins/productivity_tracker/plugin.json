{
  "name": "Productivity Tracker",
  "version": "1.0.0",
  "author": "AMA-Intent Team",
  "description": "Monitorea el tiempo dedicado a proyectos y sugiere optimizaciones de flujo de trabajo.",
  "plugin_type": "analytics",
  "entry_point": "productivity_tracker.main.ProductivityPlugin",
  "dependencies": ["pandas", "matplotlib"],
  "min_dashboard_version": "2.0.0",
  "permissions": ["read", "write"],
  "settings_schema": {
    "work_session_limit": {"type": "integer", "label": "Límite de sesión (min)", "default": 25},
    "enable_notifications": {"type": "boolean", "label": "Notificaciones", "default": true}
  }
}
